@using FinwaveClientFrontOffice.Common;

<!DOCTYPE html>
<html lang="en" dir="">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Finwave | Dashboard Home</title>
    <link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet" />
    <link href="~/Content/css/themes/lite-purple.css" rel="stylesheet" />
    <link href="~/Content/css/plugins/perfect-scrollbar.css" rel="stylesheet" />
    <script src="~/Content/js/plugins/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/plugins/toastr.min.js"></script>
    <script src="~/Content/js/Common.js"></script>
    <link rel="stylesheet" href="~/Content/css/plugins/datatables.min.css" />
    <link href="~/Content/css/plugins/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/css/Common.css" rel="stylesheet" />
</head>
<body class="text-left">
    <div class="app-admin-wrap layout-horizontal-bar">
        <div class="main-header">
            <div class="logo"><img src="~/Content/images/logo.png" alt="" /></div>
            <div class="menu-toggle">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <div class="horizontal-bar-wrap">
                <div class="header-topnav">
                    <div class="topnav rtl-ps-none" id="" data-perfect-scrollbar="" data-suppress-scroll-x="true">
                        <ul class="menu float-right">
                            <li>
                                <div>
                                    <div>
                                        <label class="toggle">Dashboard</label><a href='@Url.Action("Index","Dashboard")'>Dashboard</a>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <div>
                                        <label class="toggle">Portfolio</label><a href="#">Portfolio</a>
                                        <input id="drop-2" type="checkbox" />
                                        <ul>
                                            <li><a href='@Url.Action("GetPartialPosition","Portfolio")'><i class="nav-icon mr-2"></i><span class="item-name">Positions</span></a></li>
                                            <li>
                                                <a href='@Url.Action("GetPartialHoldings","Portfolio")'>
                                                    <i class="nav-icon mr-2"></i><span class="item-name">Holdings (7)</span>
                                                </a>
                                            </li>
                                            <li><a href="#"><i class="nav-icon mr-2"></i><span class="item-name">IPOs</span></a></li>
                                            <li><a href='@Url.Action("GetPartialLedger","Portfolio")'><i class="nav-icon mr-2"></i><span class="item-name">Ledger</span></a></li>
                                            <li><a href="#"><i class="nav-icon mr-2"></i><span class="item-name">Corporate Actions</span></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <div>
                                        <label class="toggle">Reports</label><a href="#">Reports</a>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <div>
                                        <label class="toggle">Funds</label><a href="#">Funds</a>
                                        <input id="drop-2" type="checkbox" />
                                        <ul>
                                            <li><a href="#"><i class="nav-icon mr-2"></i><span class="item-name">Overview</span></a></li>
                                            <li><a href='@Url.Action("GetPartialDPStatement","Funds")'><i class="nav-icon mr-2"></i><span class="item-name">DP Statement</span></a></li>
                                            <li><a href="#"><i class="nav-icon mr-2"></i><span class="item-name">Interest Statement</span></a></li>
                                            <li><a href="#"><i class="nav-icon mr-2"></i><span class="item-name">Bank Mandates</span></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <div>
                                        <label class="toggle">Account</label><a href='@Url.Action("GetPartialAccountDetails","Accounts")' onclick="">Account</a>
                                    </div>
                                </div>
                            </li>
                            <!-- end ui kits-->
                        </ul>
                    </div>
                </div>
            </div>
            <div class="header-part-right">
                <!-- Full screen toggle -->
                <div class="money-info-btn">
                    <i class="i-Bar-Chart text-muted header-icon"></i>
                </div>
                <!-- User avatar dropdown -->
                <div class="dropdown">
                    <div class="user col align-self-end">
                        <img src="~/Content/images/faces/1.jpg" id="userDropdown" alt="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="margin-top: -20px;">
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <div class="dropdown-header">
                                <i class="i-Lock-User mr-1"></i> @SessionHelper.CurrentUser.UserFullName
                            </div>
                            <a class="dropdown-item">Account settings</a>
                            <a class="dropdown-item">Billing history</a>
                            <a class="dropdown-item" href='@Url.Action("Clear","Login")'>Sign out</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header top menu end-->
        <!-- =============== Horizontal bar End ================-->
        <div class="main-content-wrap d-flex flex-column">
            <!-- ============ Body content start ============= -->
            @RenderBody()
        </div>
        <!-- Footer Start -->
        <div class="app-footer">
            <div class="footer-bottom border-top pt-3 d-flex flex-column flex-sm-row align-items-center">
                <span class="flex-grow-1"></span>
                <div class="col-md-12 align-items-center">
                    <p class="m-0">&copy; 2020 AIRAN FINSTOCKS PVT. LTD. All rights reserved</p>
                </div>
            </div>
        </div>
        <!-- fotter end -->
    </div>
    <script src="~/Content/js/plugins/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/Content/js/scripts/script.js"></script>
    <script src="~/Content/js/scripts/sidebar-horizontal.script.js"></script>
    <script src="~/Content/js/plugins/echarts.min.js"></script>
    <script src="~/Content/js/scripts/echarts.script.min.js"></script>
    <script src="~/Content/js/scripts/dashboard.v1.script.min.js"></script>
    <script src="~/Content/js/scripts/customizer.script.min.js"></script>
    <script src="~/Content/js/jquery.matchHeight.js"></script>
    <script src="~/Content/js/plugins/datatables.min.js"></script>
    <script src="~/Content/js/scripts/datatables.script.js"></script>
    <script src="~/Content/js/scripts/datatables.script.min.js"></script>
    <script src="~/Content/js/plugins/calendar/jquery-ui.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
</body>
</html>